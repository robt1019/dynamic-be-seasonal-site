doctype html(xmlns='http://www.w3.org/1999/xhtml', lang='en-GB', xml:lang='en-GB')
head
    title Produce Manager
    link(rel='stylesheet','type=text/css', href='stylesheets/theme.css')
body
    header
        h1 Produce Manager

    form(method="post", action="/add_produce")
        input(type="text", placeholder="name", name="name")
        input(type="text", placeholder="description" name="description")
        input(type="text", placeholder="image filename" name="imageFile")
        input(type="submit", value="Add Item")

    form(method="post", action="/add_to_month")
        input(type="text", placeholder="month", name="month_name")
        input(type="text", placeholder="produce_names", name="produce_names")
        input(type="submit", value="Add Item")
